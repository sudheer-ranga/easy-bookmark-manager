{
  "name": "Bookmark Manager",
  "version": "1.0.0",
  "description": "A clean and maintainable bookmark manager for chrome",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "bookmarks"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/bookmark-manager-16.png",
      "32": "images/bookmark-manager-32.png",
      "48": "images/bookmark-manager-48.png",
      "128": "images/bookmark-manager-128.png"
    }
  },
  "icons": {
    "16": "images/bookmark-manager-16.png",
    "32": "images/bookmark-manager-32.png",
    "48": "images/bookmark-manager-48.png",
    "128": "images/bookmark-manager-128.png"
  },
  "manifest_version": 2
}
